.section_block{
  display: flex;
  flex-direction: column;
  width: 95%;
  height: 400rpx;
  margin: 10px auto 10px auto;
  box-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  border-radius: 20px 20px 0 0;
  overflow: hidden;
}

.section_thumb{
  position: relative;
  width: 100%;
  height: 80%;
  background-color: #ddd;
}

.section_thumb_img{
  width: 100%;
  height: 100%;
}

.section_title{
  position: absolute;
  bottom: 0;
  width: 100%;
  padding:30px 10px 5px 10px;
  background-image:linear-gradient(to bottom, rgba(0,0,0,0) ,rgba(0,0,0,0.6));
  color: #fff;
}

.section_operation{
  display: flex;
  flex-direction: row
}

.section_operation > view{
  display: inline-flex;
  margin: 0rpx
}

.section_operation > view > image{
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
  margin: 0px 10rpx
}

.section_foot{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 20%;
  background-color:#fff;
  padding: 10px;
}

.publishBtn{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  width:100rpx;
  height: 100rpx;
  background-color: #29abe2;
  right:32rpx;
  bottom:32rpx;
  z-index: 999;
  box-shadow: 2px 2px 6px rgba(0,0,0,0.5);
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-weight: bolder;
  font-size:4rem
}

.publishBtn image{
  width: 60rpx;
  height: 60rpx;
}
