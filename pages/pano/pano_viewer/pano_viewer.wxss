/* pages/pano_viewer/pano_viewer.wxss */

.container{
  overflow: hidden;
}
.stage {
  margin: 0px auto;
  /* overflow: hidden; */
}
.box {

  position: relative;
  /* perspective: 1000rpx; */
  margin: 0 auto;
  transform-style: preserve-3d;

  width: 600rpx;
  height: 600rpx;

  transition: all 0s;
  transform: rotateX(0deg) rotateY(45deg) rotateZ(0deg) translateZ(200px);
  transform-origin: center center 200px;
  background: rgba(255,255,255,0.3);
  


}
.box > view {
  position: absolute;
  font-size: 120px;
  font-weight: bold;
  color: white;
  line-height: 100%;
  text-align: center;
  transition: all 1s;
  height: 100%;
  width: 100%;
}
.box > view:nth-child(1) {
  transform: rotateY(0deg) translateZ(300rpx);
  background: rgba(192, 32, 64, 0.5);
}

.box > view:nth-child(2) {
  transform: rotateX(180deg) translateZ(300rpx);
  background: hsla( 60, 100%, 50%, 0.5);
}

.box > view:nth-child(3) {
  transform: rotateY(90deg) translateZ(300rpx);
  background: hsla( 120, 100%, 50%, 0.5);
}

.box > view:nth-child(4) {
  transform: rotateY(-90deg) translateZ(300rpx);
  background: hsla( 180, 100%, 50%, 0.5);
}

.box > view:nth-child(5) {
  transform: rotateX(90deg) translateZ(300rpx);
  background: hsla( 300, 100%, 50%, 0.5);
}

.box > view:nth-child(6) {
  transform: rotateX(-90deg) translateZ(300rpx);
  background: hsla( 300, 100%, 50%, 0.5);
}