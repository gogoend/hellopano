/* pages/read/read.wxss */

image.postImg {
  width: 100%;
  height: 320rpx;
  box-shadow: 2px 4px 6px rgba(41, 171, 226, 0.2);
}

view.article {
  width: 100%;
  margin: 0 auto;
  padding: 0 40rpx;
  background-color: #fff;
}

view.article .header {
  margin: 0 auto;
  padding: 36rpx 0;
  font-size: 1.5em;
}

view.article .header>text {
  word-wrap: break-word;
}

view.hr {
  width: 100%;
  border-bottom: 1px dashed #999;
}

view.article rich-text.articleMain {
  margin: 40rpx auto 0 auto;
  width: 100%;
  display: block;
  padding-bottom: 40rpx
}

